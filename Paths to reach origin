#User function Template for python3

class Solution:
    def ways(self, n,m):
        #write you code here
        mod=10**9+7
        x=min(n,m)
        num=n+m
        p=1
        q=1
        for i in range(1,x+1):
            p*=num
            num-=1
            q*=i
        return (p//q) % mod
